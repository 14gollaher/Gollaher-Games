<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-treegrid/css/jquery.treegrid.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="~/lib/knockout/dist/knockout.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-treegrid/js/jquery.treegrid.min.js"></script>
    <script src="~/Scripts/Shared/Extensions.js"></script>
    <script src="~/Scripts/Shared/PageTools.js"></script>

    @RenderSection("Scripts", required: false)
</head>

<body>
    <div class="overlay" data-bind="visible: LoadInProgress" style="display: none;"></div>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">Gollaher Games</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Smash 4 - WiiU <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="overlay" data-bind="visible: LoadInProgress" style="display: none;">
    </div>

    <div>
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; Company 2017</p>
        </footer>
    </div> 

    <div class="modal fade" id="GeneralError" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-bind="modal: { show: DisplayErrorMessage, options: { backdrop: 'static' } }">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Application Error</h4>
                </div>
                <div class="modal-body">
                    <p>Error!</p>
                    <p data-bind="text: ErrorMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
